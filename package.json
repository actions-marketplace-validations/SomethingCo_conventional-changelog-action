{
  "name": "@somethingco/conventional-changelog-action",
  "version": "1.0.2",
  "private": false,
  "description": "Generate a changelog based on Conventional Commit history, without any configuration.",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "all": "npm run build && npm run format && npm run lint && npm run package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SomethingCo/conventional-changelog-action"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.7",
    "@actions/github": "^4.0.0",
    "conventional-commits-parser": "^3.2.1",
    "lodash": "^4.17.21",
    "luxon": "^1.26.0"
  },
  "devDependencies": {
    "@types/conventional-commits-parser": "^3.0.1",
    "@types/jest": "^26.0.15",
    "@types/lodash": "^4.14.168",
    "@types/luxon": "^1.26.5",
    "@types/node": "^15.0.1",
    "@typescript-eslint/parser": "^4.22.0",
    "@vercel/ncc": "^0.28.4",
    "eslint": "^7.25.0",
    "eslint-plugin-github": "^4.1.1",
    "eslint-plugin-jest": "^24.3.6",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "js-yaml": "^3.14.0",
    "prettier": "2.2.1",
    "ts-jest": "^26.4.4",
    "typescript": "^4.9.5"
  }
}
